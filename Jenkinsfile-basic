#!/usr/bin/env groovy

pipeline {
    agent none
    tools{
        maven 'maven3.9'
    }
    stages {
        stage('build jar') {
            steps {
                script {
                    echo "Building the application..."
                    sh 'mvn package'
                }
            }
        }
        stage('build image') {
            steps {
                script {
                    echo "building the image"
                    withCredentials([usernamePassword(credentialsId:'dockerhub', passwordVariable: 'PASS',usernameVariable: 'USER')])
                        sh 'docker build -t vamshidabbara/demojavaapp:2.0 .'
                        sh " echo $PASS | docker login -u $USER --password-stdin"
                        sh 'docker push vamshidabbara/demojavaapp:2.0'
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo "Deploying the application..."
                }
            }
        }
    }
}
